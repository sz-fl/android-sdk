<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rokid.rokidspeechttsdemo.SpeechDemoActivity">

    <EditText
        android:id="@+id/et_speech_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入文字" />

    <Button
        android:id="@+id/btn_speech_text_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送" />

    <TextView
        android:id="@+id/tv_asr_result"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_text_area"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/tv_asr_back_result"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_text_area"
        android:layout_margin="4dp" />


</LinearLayout>
